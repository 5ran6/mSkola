<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="420sp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:background="@drawable/image_2"
        android:minHeight="200dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <ImageView
            android:id="@+id/close"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="end"
            android:tint="@color/red_500"
            app:srcCompat="@drawable/ic_close" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_person_outline" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_middle"
            android:text="Have an mSkola Account?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_action"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginBottom="@dimen/spacing_large"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_blue_300"
            android:paddingLeft="@dimen/spacing_mlarge"
            android:paddingRight="@dimen/spacing_mlarge"
            android:text="@string/sign_up_1"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_green_300"
            android:paddingLeft="@dimen/spacing_mlarge"
            android:paddingRight="@dimen/spacing_mlarge"
            android:text="@string/login"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>